<!doctype html>
<!-- The PDF viewer -->
<html>

<head>
    <style>
        body {
            margin: 0;
            height: 100vh;
            overflow-y: hidden;
        }

        embed {
            background-color: white;
            width: 100%;
            height: 100%;
        }

        #employer {
            position: absolute;
            top: 0;
            pointer-events: none;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        svg {
            height: auto;
            width: 100%;
            object-fit: contain;
        }
    </style>
</head>

<body>
    <div id="employer">
        {% include "employer.svg" %}
    </div>
    <embed src="{{ PDF }}" />
</body>

</html>